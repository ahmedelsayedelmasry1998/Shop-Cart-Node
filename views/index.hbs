{{#if success}}
<div class="text-success-custom">{{success}}</div>
{{/if}}
{{#if expired}}
<div class="text-success-custom" style="color:red">{{expired}}</div>
{{/if}}

{{#each products}}
<div class="indexPage">
    {{#each this}}
    <div class="content-component">
        <div class="card">
            <img src="{{this.imagePath}}" class="card-img-top" alt="Product One">
            <div class="card-body">
                <h5 class="card-title">{{this.productName}}</h5>
                <p class="card-text">
                    Storage Capacity : {{this.information.storageCapacity}} <br>
                    Number Of Sim : {{this.information.numberOfSim}} <br>
                    Real Comara Resaluation : {{this.information.realComaraResaluation}} <br>
                    Dual Size ( Inch ) : {{this.information.dualSize}} Inch
                </p>
                <div class="actions">
                    <p class="price">{{this.price}} L.E</p>
                    {{#if ../../checkUser}}
                    <a href="/addProduct/{{this._id}}/{{this.productName}}/{{this.price}}"
                        class="btn btn-secondary">Buy</a>
                    {{else}}
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Buy
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel"> Sign In </h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Please Signin To Choose Any Product
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <a href="/users/signin" class="btn btn-success">Signin</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}